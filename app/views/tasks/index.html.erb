<h1>My tasks</h1>

<% @tasks.each do |task| %>
<p>
  <% if task.completed %>
    <i class="fas fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
    <%= link_to task.title, task_path(task) %>
  <%= link_to "", task_path(task),
      class: "far fa-trash-alt",
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</p>
<% end %>

<%= link_to 'Add a new task', new_task_path %>
